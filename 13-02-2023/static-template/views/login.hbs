<html lang="it">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Nunito:wght@600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="images/favicon-32x32.png"
    />
    <!--Se uso il formato ico uso questo codice-->
    <!--<link rel="icon" type="image/x-icon" href="images/favicon.ico">-->

    <title>{{titolo}}</title>
  </head>

  <body>
    {{> navhero}}

    <div class="container">

      <!--BREADCRUMB-->
      <div class="mt-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page"><a
                href="/"
              >Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">LogIn</li>
          </ol>
        </nav>
      </div>


      <!--TITOLO DEL CONTENUTO-->
      <div class="d-flex justify-content-center">
        <h1 class="display-2 my-5">{{titolo}} </h1>
      </div>

      {{#if message}}
      <h3>{{message}} </h3>
      {{/if}}

      <section class="mb-5">

        <form class="row g-3" action="/login" method="POST">

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <input type="email" name="email" class="form-control" placeholder="mail" />
              <label>Email</label>
            </div>
          </div>

          <div class="col-md-6">
            <div class="form-floating mb-3">
              <input
                type="password" name="password"
                class="form-control"
                placeholder="password"
              />
              <label>Password</label>
            </div>
          </div>

          <div class="col-md-12">
            <button type="submit" class="btn btn-primary ms-over">Invia</button>
          </div>
        </form>

      </section>

    </div>
    <!--Chiusura div container-->

        {{>footer}}


    <!--SCRIPT JAVASCRIPT-->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="js/back-to-top.js"></script>
  </body>

</html>